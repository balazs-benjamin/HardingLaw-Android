<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewInjuryActivity"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field with * are required"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Location*"
                        android:focusable="false"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/btnPickLocation"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_roundback"
                        android:drawableLeft="@drawable/icn_location"
                        android:text="PICK"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Date*"
                        android:focusable="false"
                        android:inputType="textPersonName" />
                    <Button
                        android:id="@+id/btnPickDate"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_roundback"
                        android:text="PICK"
                        android:drawableLeft="@drawable/icn_date"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Time*"
                        android:focusable="false"
                        android:inputType="textPersonName" />
                    <Button
                        android:id="@+id/btnPickTime"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_roundback"
                        android:text="PICK"
                        android:drawableLeft="@drawable/icn_time"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/rlPhoto1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imgPhoto1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_light" />

                    <Button
                        android:id="@+id/btnPhoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_takephoto" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPhoto2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imgPhoto2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_light" />

                    <Button
                        android:id="@+id/btnPhoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_takephoto" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPhoto3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imgPhoto3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_light" />

                    <Button
                        android:id="@+id/btnPhoto3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_takephoto" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Tap the boxes to take pictures*"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="All three pictures are mandatory" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Other Driver's Infomration"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Other Driver's Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etDriverPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Other Driver's Phone Number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etDriverLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Other Driver's License Plate"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Vehicle Make/Model"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etInsuranceCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Insurance Company"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Witness Infomration"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etWitnessName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Witness 1 Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etWitnessPhone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Witness 1 Phone Number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etWitnessName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Witness 2 Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etWitnessPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Witness 2 Phone Number"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Injured Infomration"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etInjuredName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Injured 1 Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etInjuredPhone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Injured 1 Phone Number"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Take Injured 1 Picture"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rlInjuredPhoto1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/imgPhoto4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <Button
                    android:id="@+id/btnInjuredPhoto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_takephoto" />
            </RelativeLayout>

            <EditText
                android:id="@+id/etInjuredName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Injured 2 Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etInjuredPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Injured 2 Phone Number"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Take Injured 2 Picture"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rlInjuredPhoto2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/imgPhoto5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <Button
                    android:id="@+id/btnInjuredPhoto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_takephoto" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Police Information"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Take a picture to use in your case if necessary" />

            <RelativeLayout
                android:id="@+id/rlPolicePhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/imgPhoto6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light" />

                <Button
                    android:id="@+id/btnPolicePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_takephoto" />
            </RelativeLayout>

            <EditText
                android:id="@+id/etPoliceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Police Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etPoliceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Police Number"
                android:inputType="number" />

            <EditText
                android:id="@+id/etPoliceReportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Police Report Number"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Your Personal Details"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etYourName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Your Name*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etYourPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Your Phone Number*"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etYourAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Your Address*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etYourLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Your License Plate*"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_roundback"
                android:text="SUBMIT YOUR REPORT NOW!"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:contentDescription="Uploading"
        android:visibility="gone"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_thickness="22dp" />

</RelativeLayout>
